<% if resource.errors.present? %>
    $('.answer-error-messages').html('<%= j render 'answers/form_errors' %>');
<% else %>
  reload_edit();
  <% publish_to "/questions/#{parent.id}/answers" do %>
    $('.list-answers').html('<%= j render 'questions/answers', question: parent %>');
  <% end %>
    $('.add-answer-form textarea').val('');
    $('.answer-error-messages').html('');
<% end %>
