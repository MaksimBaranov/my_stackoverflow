<% if @answer.errors.present? %>
    $('.answer-error-messages').html('<%= j render 'answers/form_errors' %>');
<% else %>
  reload_edit();
  <% publish_to "/questions/#{@question.id}/answers" do %>
    $('.list-answers').html('<%= j render 'questions/answers' %>');
  <% end %>
    $('.add-answer-form textarea').val('');
    $('.answer-error-messages').html('');
<% end %>
