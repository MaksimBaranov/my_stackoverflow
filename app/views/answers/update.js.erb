<% if resource.errors.present? %>
    $('#answer-error-<%= resource.id %>').html('<%= j render 'answers/form_errors' %>');
<% else %>
  $('.list-answers').html('<%= j render 'questions/answers', question: parent %>');
  reload_edit();
  $('.answer-error-messages').html('');
  $("form#edit-answer-<%= resource.id %>").hide();
<% end %>
