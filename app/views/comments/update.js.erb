<% if @comment.errors.present? %>
    $('.comment-error-messages').html('<%= j render 'comments/form_errors' %>');
<% else %>
  <% publish_to "/questions/#{@comment.question.id}/comments" do %>
    $('li#comment-<%= @comment.id %>').html('<%= j render 'comments/comment', comment: @comment %>');
  <% end %>
  reload_edit();
  $('.comment-error-messages').html('');
  $('.js-edit-comment-form.clone').remove();
  // It will change when i add popup or dialog window
  $('.improve-comment-link').show();
<% end %>

